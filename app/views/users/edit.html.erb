<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this book from being saved:
  <ul>
    <div class = "errors_message">
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  </ul>
<% end %>
<div class = "container">
  <div class = "row">
    <%= form_with model: @user, local:true do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label>
        <div class = "field">
          <%= f.text_field :name, :size=>"55" %>
        </div>
      </div>
      <div class="form-group">
        <label for="user_image">Image</label>
        <div class = "field">
          <%= f.attachment_field :profile_image %>
        </div>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <div class = "field">
          <%= f.text_area :introduction, :size=>"54x2" %>
        </div>
      </div>
      <button class = "button button-primary", type = "submit">投稿</button>
    <% end %>
  </div>
</div>