<div class = "w-75 mx-auto bg-light">
  <div class = "container">
    <div class = "row">
      <div class = "col-3">
        <a><%= attachment_image_tag @game, :image, size:'200x200', format:'jpg', fallback:"default-image.jpg" %></a>
      </div>
      <div class = "col-9">
        <div class = "text-center">
          <div class = "form-group">
            <h2><%= @game.title %></h2>
          </div>
          <div class = "form-group">
            <h2>Detaile</h2>
          </div>
          <h4><%= @game.body %></h4>
        </div>
      </div>
      <div class = "w-100 text-center my-2">
        <h5>USER NAME: <%= @game.user.name %></h5>
      </div>
    </div>
  </div>
</div>